<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container nav-container">

    <ul class="nav nav-pills">
      {{#if user}}
      {{#if photo}}
      <li><img src="{{photo}}"/></li>
      {{/if}}
      <li><h5>Welcome, {{name}}!</h5></li>
      <li><a class="logout" href="/users/logout">Log out</a></li>
      {{else}}
      {{/if}}
      {{#unless user}}
      <li><a href='/auth/google'><img class="google" src="http://i.stack.imgur.com/XzoRm.png" alt="google oauth"/></a></li>
      <li><a class="signup" href="/users/signup">Sign Up</a></li>
      <li><a class="login" href="/users/login">Log In</a></li>
      {{/unless}}
    </ul>

    <div class="dropdown cart">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Cart
        <span class="caret"></span>
      </button>
      <table class="dropdown-menu dropdown" aria-labelledby="dropdownMenu1">
        <tr>
          <td>--------------------</td>
        </tr>
        <tr id='total'>
          <td><b>Total:</b></td>
          <td>$total</td>
        </tr>
      </table>
    </div>

  </div>
</nav>


<table>
  <tr>
    <th>Image</th>
    <th class='hidden'>ID</th>
    <th class='text-center'>Name</th>
    <th class='text-center'>Price</th>
    <th class='text-center'>Description</th>
    <th class='text-center'>Add to Cart</th>
  </tr>
  {{#items}}
  <tr class='listing-row'>
    <td><img class='item-pic' src='{{this.image_url}}'></td>
    <td class='hidden'>{{this.id}}</td>
    <td class='text-center'>{{this.name}}</td>
    <td class='text-center'>${{this.price}}</td>
    <td class='description hide-in-cart'>{{this.description}}</td>
    <td class='hide-in-cart'><form method='POST' action='/cart/add/{{this.id}}'><input type='submit' value='Add to Cart'></form></td>
  </tr>
  {{/items}}
</table>
